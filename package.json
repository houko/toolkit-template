{
  "name": "toolkit-template",
  "version": "1.0.0",
  "description": "a tailwind component library for react.",
  "main": "index.js",
  "repository": "https://github.com/houkoe/toolkit-template.git",
  "author": "houko",
  "license": "MIT",
  "scripts": {
    "dev": "rollup -w --environment NODE_ENV:development -c scripts/rollup.config.dev.js",
    "build": "rollup --environment NODE_ENV:development -c scripts/rollup.config.prod.js",
    "x": "yarn --no-git-tag-version version major",
    "y": "yarn --no-git-tag-version version minor",
    "z": "yarn --no-git-tag-version version patch",
    "lint": "eslint src",
    "fix": "yarn lint --fix",
    "commit": "git-cz",
    "test": "jest",
    "test:c": "jest --coverage",
    "prepublish": "yarn build",
    "publish": "yarn publish --access=public",
    "publish:x": "yarn x && yarn publish --access=public",
    "publish:y": "yarn y && yarn publish --access=public",
    "publish:z": "yarn z && yarn publish --access=public"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.1",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "autoprefixer": "^10.3.3",
    "postcss": "^8.3.6",
    "react": "^17.0.2",
    "tailwindcss": "^2.2.9",
    "typescript": "^4.4.2"
  },
  "jest": {
    "preset": "rollup-jest"
  }
}
